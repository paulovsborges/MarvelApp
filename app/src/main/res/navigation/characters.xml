<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/characters"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.pvsb.marvelapp.presentation.home.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters">
        <action
            android:id="@+id/action_charactersFragment_to_characterDetail"
            app:destination="@id/characterDetail" />
    </fragment>

    <fragment
        android:id="@+id/characterDetail"
        android:name="com.pvsb.marvelapp.presentation.detail.CharacterDetailsFragment"
        tools:layout="@layout/fragment_character_detail">

        <argument
            android:name="characterData"
            app:argType="com.pvsb.marvelapp.presentation.model.CharacterDetailNavArg" />
    </fragment>
</navigation>